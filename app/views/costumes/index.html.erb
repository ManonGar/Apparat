<div class="container">
  <h1>Costumes</h1>
  <div class="">
    <% if policy(Costume).create? %>
      <%= link_to "New costume", new_costume_path %>
    <% end %>
  </div>

  <div class="container">
    <div class="cards">
      <% @costumes.each do |costume| %>
        <%= link_to "#" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg)">
              <%= costume.name%>
          </div>
        <% end %>
      <% end %>
    </div>
</div>