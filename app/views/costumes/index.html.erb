<div class="container">
  <h1>Costumes</h1>

  <div class="cards">
    <% @costumes.each do |costume| %>
      <%= link_to costume_path(costume) do %>
        <div class="card-trip">
          <%= cl_image_tag costume.photos.first.key %>
          <div class="card-trip-infos">
            <div>
              <h1><%=costume.name%></h1>
              <p><%=costume.category%><p>
              <h3><%= costume.price %>â‚¬</h3>
            </div>
            <img src="https://www.vanityfair.fr/uploads/images/thumbs/201627/f0/marie_antoinette_slid_vf_5435.jpeg_north_375x310_transparent.jpg" class="card-trip-user avatar-bordered" />
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
