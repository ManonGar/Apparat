<div class="container">
  <h1>Costumes</h1>

  <div class="container">
    <div class="cards">
      <% @costumes.each do |costume| %>
        <%= link_to costume_path(costume) do %>

          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=cl_image_path costume.photos.first.key, height: 300, width: 400, crop: :fill%>')">
                <%=costume.name%>
          </div>
        <% end %>
      <% end %>
    </div>
</div>
