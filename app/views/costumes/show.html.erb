<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">

  <div class="edit">
        <li class="nav-item dropdown">
          <div class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-pencil-alt"></i>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <ul>
              <li class="dropdown-item"><%= link_to "Mettre à jour", edit_costume_path(@costume), class: "text-decoration-none"%></li>
              <li class="dropdown-item"><%= link_to "Effacer", costume_path(@costume), method: :delete, data: {confirm: "Etes-vous sûr de vouloir effacer ce costume?"}%></li>
            </ul>
          </div>
        </li>
      </div>
    </div>

  <div id="main-card">
    <div class="description">
      <h1><%= @costume.name %></h1>
      <p><%= @costume.description %></p>
      <p><%= @costume.price %></p>
    </div>
  </div>

  <% @costume.photos.each do |photo| %>
    <%= cl_image_tag photo.key %>
  <% end%>

    <div class="container">
      <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
        <h3> Réservations </h3>
        <%= simple_form_for [@costume, @booking] do |f| %>
            <%= f.input :beginning_date, label: 'Date de début', as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :ending_date, label: 'Date de fin', as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.button :submit, "Réserver", class: "btn btn-ghost" %>
        <% end %>
      </div>
    </div>

    <hr>
    <div>
      <%= link_to "Retour aux costumes", costumes_path, class: "btn btn-ghost" %>
    </div>

 </div
</div>