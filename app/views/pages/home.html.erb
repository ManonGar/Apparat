        </div>
        <% end %>
        <%= link_to costumes_path do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url('<%= image_path "bg_impressioniste-Loic-01.png" %>') ">
          1900 - 1920
        </div>
        <% end %>
        <%= link_to costumes_path do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url('<%= image_path "bg_martian.png" %>') ">
          XXe Siècle
        </div>
        <% end %>


      </div >
      <%= link_to "Voir tous les costumes", costumes_path, class: "arrow" %>
  </div>
</div>

