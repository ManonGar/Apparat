<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
   <h2>Apparat</h2>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <% if policy(Costume).create? %>
        <%= link_to "Ajouter un costume", new_costume_path, class: "nav-link" %>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "Costumes", costumes_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= cl_image_tag @costume.user.photos.first.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if current_user.nil? %>
            <%= link_to "Connexion", user_session_path, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Mes costumes", costumes_path, class: "dropdown-item" %>
            <%= link_to "Mes réservations", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Mon espace", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
